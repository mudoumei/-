.tabs{
  position: relative;
  display: flex;
}
.tabs text{
  flex:1;
  line-height: 88rpx;
  text-align: center;
  color: #A7CAF8;
}
.tabBar{
  padding: 0 8%;
  width: 25%;
  position: absolute;
  left: 0;
  bottom: 0;
  transition: all 0.25s ease-in-out;
}
.tabBar::after{
  content: '';
  display: block;
  width: 100%;
  height: 8rpx;
  background-color:#A7CAF8;
}