/* pages/addWishList/addWishList.wxss */
.content{
  width: 100%;
  padding:0 50rpx;
  padding-bottom:50rpx;
}
.th{
  color:#B9D8FF;
  font-size: 36rpx;
  line-height: 100rpx;
}
.inputTheme{
  padding-left:2em;
  font-size: 32rpx;
  line-height: 88rpx;
  border-bottom:4rpx solid #B9D8FF;
  color:#1a1a1a
}
.wishList{
  position: relative;
}
.addCount{
  position: absolute;
  color:#B9D8FF;
  font-size: 44rpx;
  line-height: 88rpx;
  top: 0;
  right: 0;
}
.row{
  display: flex;
  height: 100rpx;
  margin-bottom: 10rpx;
  align-items:center;
}
.row .num{
  flex:0 0 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #B9D8FF;
  color:#fff;
  border-radius: 50%;
  margin-right: 30rpx;
}
.row .inputwish{
  padding: 0 40rpx;
  flex:0 0 450rpx;
  height: 88rpx;
  border:2rpx solid #B9D8FF;
  border-radius: 10rpx;
  color:#1a1a1a;
  font-size: 32rpx;
}
.row .del{
  color:#d81e06;
}
.selectColor{
  display: flex;
  align-items: center;
}
.mainColor{
  flex:0 0 60rpx;
  height: 40rpx;
  border:2rpx solid #B9D8FF;
  border-radius: 10rpx;
  margin-right: 40rpx;
}
.colors{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex:0 0 400rpx;
  height: 60rpx;
  border:2rpx solid #B9D8FF;
  border-radius: 15rpx;
  padding: 0 10rpx;
}
.colorItem{
  position: relative;
  flex:0 0 25rpx;
  height: 25rpx;
  border-radius: 50%;
}
.select::after{
  content:'';
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border:2rpx solid #B9D8FF;
  border-radius: 50%;
}
.save{
  position: fixed;
  bottom:50rpx;
  right: 40rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 12rpx #B9D8FF;
  text-align: center;
  line-height: 88rpx;
  background-color: #fff;
}
.icon-checkbox{
  color:#B9D8FF;
  font-size: 55rpx;
}