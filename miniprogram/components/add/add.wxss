/* pages/add/add.wxss */
.add-container{
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.moduleIconContainer{
  padding: 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  text-align: center;
}
.hover{
  background:rgba(186, 223, 253, 0.2);
}
.hover .moduleIcon{
  width: 190rpx;
  height: 190rpx;
}
.moduleIcon{
  width: 100%;
  height: 100%;
}
.moduleText{
  font-size:28rpx;
  text-align: center;
  color: #A7CAF8;
}
.close{
  display:inline-block;
  width: 64rpx;
  height: 64rpx;
  opacity: 0;
}
.Rclose{
  animation: showclose 0.25s ease-in-out 1s;
  animation-fill-mode:forwards;
}
.show{
opacity: 0;
animation: showIcon 0.5s ease-in 0.5s;
animation-fill-mode:forwards;
}
@keyframes showIcon
{
from {opacity: 0;}
to {opacity: 1;}
}
@keyframes showclose
{
  from {transform: rotateZ(0deg);
    opacity: 0;}
  to {transform: rotateZ(-90deg);
    opacity: 1;}
}
.mask{
  position: absolute;
  top:0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background:#A7CAF8;
  opacity: 0;
  border-radius: 20rpx;
}
.showmask{
  opacity: 0.2;
}
.closecontainer{
  width: 100%;
  margin-top: 80rpx;
  text-align: center;
}